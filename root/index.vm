<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <title>Jaw</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="index.css">
</head>
<script type="text/javascript" src="jquery.js"></script>
<script type="text/javascript" src="index.js"></script>
<body>
<h1>GET</h1>
<ul>
	#foreach ($entry in $request.getQueryParameters().entrySet())
		<li><b>$entry.key</b> $entry.value</li>
	#end
</ul>
<h1>POST</h1>
<ul>
	#foreach ($entry in $request.getPostParameters().entrySet())
        <li><b>$entry.key</b> $entry.value</li>
	#end
</ul>
<form id="test-form" method="post" enctype="multipart/form-data" action="index.vm">
	<input type="text" value="Hello, World" name="value">
    <input type="text" value="ASdasd" name="test">
	<input type="file" accept="*/*" name="file">
	<input type="submit" value="Concretize">
</form>
</body>
<script>
$(document).ready(function() {
	$("#test-form").submit(function(e) {
		$.ajax({
			url: $(this).attr("action"),
			type: "POST",
			data: new FormData(this),
			xhr: function() {
				var xhr = $.ajaxSettings.xhr();
				if (xhr.upload) {
					xhr.upload.addEventListener("progress", function(e) {
						console.log(e.loaded + "/" + e.total);
					}, false);
				}
				return xhr;
			},
			success: function(e) {
				console.log(e);
			},
			error: function(e) {
				console.log(e);
			},
			contentType: false,
			cache: false,
			processData: false
		});
		e.preventDefault();
	});
});
</script>
</html>